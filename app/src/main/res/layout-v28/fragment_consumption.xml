<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2"
    android:clipChildren="false"
    tools:context=".fragments.ConsumptionFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.qhutch.elevationimageview.ElevationImageView
        android:id="@+id/imageView2"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintVertical_bias="0.0"
        android:elevation="50dp"
        />

    <com.qhutch.elevationimageview.ElevationImageView
        android:id="@+id/consv"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_small"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:elevation="50dp"/>

    <com.qhutch.elevationimageview.ElevationImageView
        android:id="@+id/connv"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_small"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:elevation="50dp"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/verdana_bold"
        android:text="CONNECTIONS"
        android:textColor="#AFFBF2"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/connv"
        app:layout_constraintEnd_toEndOf="@+id/connv"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/connv"
        app:layout_constraintTop_toTopOf="@+id/connv"
        app:layout_constraintVertical_bias="0.0"
        android:elevation="10dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/verdana_bold"
        android:text="EXPENDITURE"
        android:textColor="#AFFBF2"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0"
        android:elevation="10dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/verdana_bold"
        android:text="CONSUMPTION"
        android:textColor="#AFFBF2"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/consv"
        app:layout_constraintEnd_toEndOf="@+id/consv"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="@+id/consv"
        app:layout_constraintTop_toTopOf="@+id/consv"
        app:layout_constraintVertical_bias="0.0"
        android:elevation="10dp"/>

    <Button
        android:id="@+id/calccost"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:fontFamily="@font/verdana_bold"
        android:text="CALCULATE"
        android:backgroundTint="#029386"
        android:textColor="#38FF00"
        android:outlineSpotShadowColor="#029386"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="#36FB00" />

</androidx.constraintlayout.widget.ConstraintLayout>